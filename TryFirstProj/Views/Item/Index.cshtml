@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">

    <partial name="_Notification" />

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Items View</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Item" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Item
            </a>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    Item Name
                </th>
                <th scope="col">
                    Item Price
                </th>
                <th scope="col">
                    Catogrey
                </th>
                <th scope="col">
                   Image
                </th>
                <th scope="col">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td scope="row" width="20%">
                        @item.name
                    </td>
                    <td width="20%">
                        @item.price
                    </td>
                    <td width="30%">
                        @item.catogrey.Name
                    </td>
                    <td width="30%">
                       <img src="~/images/@item.imagePath" style="width:55px" class="img-thumbnail"/>
                    </td>
                    <td>
                        <a asp-controller="Item" asp-action="Edit" asp-route-id="@item.id" class="btn btn-success">
                            <i class="bi bi-pencil"></i>
                        </a>
                        &nbsp;
                        <a asp-controller="Item" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
