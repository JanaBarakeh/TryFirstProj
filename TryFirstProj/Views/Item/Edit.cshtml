@model Item
@{
    ViewData["Title"] = "Edit";
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Item</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="name"></label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="price"></label>
            <input asp-for="price" class="form-control" />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="catogreyId"></label>
            <select asp-for="catogreyId" class="form-control" asp-items="@ViewBag.catogreyList">
            </select>
            <span asp-validation-for="catogreyId" class="text-danger"></span>
        </div>

        <br />
        <hr />
        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        <a asp-action="Index" asp-controller="Item" class="btn btn-secondary" style="width:150px">
            back to items
        </a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


